<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndPoint default="true" xmlns="http://www.sap.com/apimgmt">
    <name>default</name>
    <base_path>/FaultRulePolicyPoC</base_path>
    <properties/>
    <routeRules>
        <routeRule>
            <name>default</name>
            <targetEndPointName>default</targetEndPointName>
            <sequence>1</sequence>
            <faultRules/>
        </routeRule>
    </routeRules>
    <faultRules>
        <faultRule>
            <name>CallFaultPolicy</name>
            <condition>(fault.name = "FailedToResolveAPIKey")</condition>
            <steps>
                <step>
                    <policy_name>AssignCustomError</policy_name>
                    <condition></condition>
                    <sequence>1</sequence>
                </step>
            </steps>
        </faultRule>
    </faultRules>
    <preFlow>
        <name>PreFlow</name>
        <request>
            <isRequest>true</isRequest>
            <steps>
                <step>
                    <policy_name>verifyAPIKey</policy_name>
                    <condition></condition>
                    <sequence>1</sequence>
                </step>
                <step>
                    <policy_name>EnforceQuota</policy_name>
                    <condition></condition>
                    <sequence>2</sequence>
                </step>
            </steps>
        </request>
    </preFlow>
    <postFlow>
        <name>PostFlow</name>
    </postFlow>
    <conditionalFlows/>
</ProxyEndPoint>
